## SETTINGS ##

# Disable search
org.gnome.desktop.search-providers disable-external true

# Set ibus-avro
org.gnome.desktop.input-sources sources [('xkb', 'us'), ('ibus', 'ibus-avro')]
org.gnome.desktop.interface gtk-im-module 'ibus'

# Set input source options
org.gnome.desktop.input-sources per-window true

# Disable recently used
org.gnome.desktop.privacy remember-recent-files false

# Beep when Num Lock or Caps Lock are turned on
org.gnome.desktop.a11y.keyboard togglekeys-enable true

# Set blank screen to 'never'
org.gnome.desktop.session idle-delay uint32 0

# Set power button action to Power Off
org.gnome.settings-daemon.plugins.power power-button-action 'interactive'

# Set switch input source shortcut
org.gnome.desktop.wm.keybindings switch-input-source ['<Alt>space']
org.gnome.desktop.wm.keybindings switch-input-source-backward ['<Shift><Alt>space']

# Set automatice timezone
org.gnome.desktop.datetime automatic-timezone true

# Set time format to 12h
org.gtk.Settings.FileChooser clock-format '12h'
org.gnome.desktop.interface clock-format '12h'

# Control how new windows get focus
org.gnome.desktop.wm.preferences focus-new-windows 'strict'

# Switch application from the current workspace only
org.gnome.shell.app-switcher current-workspace-only true

# Show the week date in the calendar
org.gnome.desktop.calendar show-weekdate true

# Set this to TRUE to be able to send mouse clicks by tapping on the touchpad.
org.gnome.desktop.peripherals.touchpad tap-to-click true

## Extensions

# Enable user extensions
org.gnome.shell disable-user-extensions false

# Enable all extensions
org.gnome.shell enabled-extensions ['InternetSpeedMeter@alshakib.dev', 'appindicatorsupport@rgcjonas.gmail.com', 'windowIsReady_Remover@nunofarruca@gmail.com', 'system-monitor-next@paradoxxx.zero.gmail.com']


## Gnome Tweak Tools ##

# Set GTK3 theme to 'adw-gtk3'
org.gnome.desktop.interface gtk-theme 'adw-gtk3'

# Set icon theme to 'Papirus'
org.gnome.desktop.interface icon-theme 'Papirus'

# Set interface text font to 'Roboto 11'
org.gnome.desktop.interface font-name 'Roboto 11'

# Set document text font to 'Roboto 11'
org.gnome.desktop.interface document-font-name 'Roboto 11'

# Set legacy window titles font to 'Roboto Bold 11'
org.gnome.desktop.wm.preferences titlebar-font 'Roboto Bold 11'

# Set monospace text font to 'JetBrains Mono Medium 10'
org.gnome.desktop.interface monospace-font-name 'JetBrains Mono Medium 10'

# Show battery percentage
org.gnome.desktop.interface show-battery-percentage true

# Show weekday
org.gnome.desktop.interface clock-show-weekday true

# Show seconds
org.gnome.desktop.interface clock-show-seconds true

# Set minimize, maximize and close button
org.gnome.desktop.wm.preferences button-layout 'appmenu:minimize,maximize,close'

# Set center new window
org.gnome.mutter center-new-windows true


## Avro Phonetic Preferences ##

# Disable preview window
com.omicronlab.avro switch-dict false
com.omicronlab.avro switch-preview false


## Tilix ##

# Set autohide the mouse pointer when typing
com.gexperts.Tilix.Settings auto-hide-mouse true

# Set require <Control> modifier to edit title on click
com.gexperts.Tilix.Settings control-click-titlebar true

# Set theme variant to 'dark'
com.gexperts.Tilix.Settings theme-variant 'dark'

# Hide the terminal title if it's the only terminal
com.gexperts.Tilix.Settings terminal-title-show-when-single false


## Files ##

# Set default zoom level to 'small'
org.gnome.nautilus.list-view default-zoom-level 'medium'
org.gnome.nautilus.icon-view default-zoom-level 'medium'

# Set sort folders before files
org.gtk.Settings.FileChooser sort-directories-first true

# Whether the time is shown in 24h or 12h format.
org.gtk.gtk4.Settings.FileChooser clock-format '12h'

# If set to true, then folders are shown before files in the list.
org.gtk.gtk4.Settings.FileChooser sort-directories-first true

# Either "recent" or "cwd"; controls whether the file chooser starts up showing the list of recently-used files, or the contents of the current working directory.
org.gtk.Settings.FileChooser startup-mode 'cwd'

# Either "recent" or "cwd"; controls whether the file chooser starts up showing the list of recently-used files, or the contents of the current working directory.
org.gtk.gtk4.Settings.FileChooser startup-mode 'cwd'

## Text Editor

# Show line numbers
org.gnome.TextEditor show-line-numbers true

# Wrap long text
org.gnome.TextEditor wrap-text false

# Set indent style to space
org.gnome.TextEditor indent-style 'space'

# Set indent tab width
org.gnome.TextEditor tab-width uint32 4

# Set style scheme to Kate
org.gnome.TextEditor style-scheme 'kate'

# Use JetBrains Mono font
org.gnome.TextEditor use-system-font false
org.gnome.TextEditor custom-font 'JetBrains Mono Medium 11'

# Highlight current line
org.gnome.TextEditor highlight-current-line true

# Show minimap
org.gnome.TextEditor show-map true


## Rhythmbox ##

# Set Rhythmbox window maximized by default
org.gnome.rhythmbox maximized true

# Set watch my library for new files
org.gnome.rhythmbox.rhythmdb monitor-library true

# Set check for new podcast episodes to manual
org.gnome.rhythmbox.podcast download-interval 'manual'

# If true, the elapsed time will be shown in song duration displays. Otherwise the remaining time will be shown.
org.gnome.rhythmbox time-display false


## Software ##

# Disable automatic update notifications
org.gnome.software download-updates-notify false

# Disable automatic updates
org.gnome.software download-updates false


## Marker

# Disable right margin
com.github.fabiocolacio.marker.preferences.editor show-right-margin false

# Set CSS theme to GitHub2
com.github.fabiocolacio.marker.preferences.preview css-theme 'GitHub2.css'


## Virt Manager

# Show system tray icon while app is running
org.virt-manager.virt-manager system-tray true


## Gnome System Monitor

# Main Window should open maximized
org.gnome.gnome-system-monitor maximized true

# Show process dependencies in tree form
org.gnome.gnome-system-monitor show-dependencies true


## Weather

# The unit of temperature used for showing weather. Valid values are “kelvin”, “centigrade” and “fahrenheit”.
org.gnome.GWeather4 temperature-unit 'centigrade'

# Whether to fetch the current location or not
org.gnome.shell.weather automatic-location true

# The location for which to show a forecast
org.gnome.shell.weather locations [<(uint32 2, <('Dhaka', 'VGHS', true, [(0.41626102660064762, 1.5777776438028739)], [(0.41404543583499592, 1.5779279341047632)])>)>]

# The locations shown in the world view of gnome-weather. Each value is a GVariant returned by gweather_location_serialize().
org.gnome.Weather locations [<(uint32 2, <('Dhaka', 'VGHS', false, [(0.41626102660064762, 1.5777776438028739)], [(0.41626102660064762, 1.5777776438028739)])>)>]
